{
  "name": "riotjs-project-template",
  "version": "0.1.0",
  "main": "src/index.js",
  "repository": "https://github.com/chaucerbao/riotjs-project-template",
  "author": "Alvin Chan <no@email.com>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "npm run clean && NODE_ENV=production webpack -p",
    "clean": "rm -rf public/",
    "lint": "standard webpack.config.js 'src/**/*.js' 'src/**/*.tag'",
    "lint:fix": "(prettier --write webpack.config.js 'src/**/*.js' && standard --fix webpack.config.js 'src/**/*.js' 'src/**/*.tag') & stylefmt --recursive 'src/**/*.scss' & wait",
    "test": "ava",
    "precommit": "npm run lint"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-3"
    ],
    "plugins": [
      "syntax-dynamic-import",
      [
        "transform-runtime",
        {
          "helpers": false,
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "html"
    ],
    "globals": [
      "opts"
    ]
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "riot": "^3.3.1",
    "riot-route": "^3.1.0"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "babel-register": "^6.23.0",
    "css-loader": "^0.26.2",
    "eslint-plugin-html": "^2.0.1",
    "extract-text-webpack-plugin": "^2.0.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.1",
    "nock": "^9.0.8",
    "node-fetch": "^1.6.3",
    "node-sass": "^4.5.0",
    "prettier": "^0.19.0",
    "riotjs-loader": "^4.0.0",
    "sass-loader": "^6.0.2",
    "standard": "^8.6.0",
    "stylefmt": "^5.1.2",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  }
}
